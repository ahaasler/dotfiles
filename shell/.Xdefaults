!! URxvt
!
! Fix URxvt copy/paste
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
! Navigation
URxvt.keysym.Home: \033[1~
URxvt.keysym.End: \033[4~
URxvt.keysym.KP_Home: \033[1~
URxvt.keysym.KP_End:  \033[4~
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! Material design color scheme
! black
*color0: #212121
*color8: #757575
! red
*color1: #f44336
*color9: #ef5350
! green
*color2: #66bb6a
*color10: #98ee99
! yellow
*color3: #ffee58
*color11: #ffff8b
! blue
*color4: #42a5f5
*color12: #29b6f6
! magenta
*color5: #ab47bc
*color13: #df78ef
! cyan
*color6: #6ff9ff
*color14: #88ffff
! white
*color7: #FFFFFF
*color15: #FFFFFF

!! URxvt Appearance
URxvt.scrollBar: false

URxvt*font: xft:Hack:size=12:antialias=true:hinting=true
URxvt*boldFont: xft:Hack:style=Bold:size=12:antialias=true:hinting=true
URxvt*italicFont: xft:Hack:style=Italic:size=12:antialias=true:hinting=true
URxvt*boldItalicFont: xft:Hack:style=Bold Italic:size=12:antialias=true:hinting=true
URxvt*letterSpace: 0

URxvt*depth: 32
URxvt*background: rgba:0000/0000/0200/c800
URxvt*foreground: white
URxvt*highlightColor: white

!! URxvtFZF menu
URxvtFZF*internalBorder: 10
URxvtFZF*font: xft:Hack:size=16:antialias=true:hinting=true
URxvtFZF*boldFont: xft:Hack:style=Bold:size=16:antialias=true:hinting=true
URxvtFZF*italicFont: xft:Hack:style=Italic:size=16:antialias=true:hinting=true
URxvtFZF*boldItalicFont: xft:Hack:style=Bold Italic:size=16:antialias=true:hinting=true
