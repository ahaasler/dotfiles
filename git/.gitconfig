[user]
	name = Adrian Haasler Garc√≠a
	email = dev@adrianhaasler.com
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[branch]
	autosetuprebase = always
[merge]
	tool = vimdiff
[color]
	ui = true
[color "status"]
	untracked = magenta
	added = cyan
	changed = yellow
[status]
	branch = true
	short = true
	showuntrackedfiles = all
[help]
	autocorrect = 1
[advice]
	statusuoption = false
[push]
	default = current
[core]
	editor = vim
	excludesfile = ~/.gitignore
[alias]
	cp = cherry-pick
	d = difftool
	dc = difftool --cached
	sync = "!f() { git checkout @{-1} && git pull && git checkout - && git rebase @{-1}; }; f"
