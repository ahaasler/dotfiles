[Unit]
Description=Mount rivendel/services at boot
Requires=systemd-networkd.service
After=network-online.target systemd-resolved.service
Wants=network-online.target systemd-resolved.service

[Mount]
What=//rivendel/services
Where=/mnt/rivendel/services
Options=credentials=/etc/samba/creds/rivendel,iocharset=utf8,rw,x-systemd.automount,vers=1.0
Type=cifs
TimeoutSec=30

[Install]
WantedBy=multi-user.target
